@using PagedList.Mvc
@model PagedList.IPagedList<ModelEF.Model.Sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_home.cshtml";
}

@section plant{
    <h2><strong class="black"> Our</strong>  Product</h2>
    <span>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected randomised words which don't look even slightly believable</span>
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <div class="sport_product">
                    <figure><img src="~/Assets/View/images/iphone11promax.png" alt="img" /></figure>
                    <h3> <strong class="price_text">@Html.DisplayFor(modelItem => item.Giatien)</strong>VNĐ</h3>
                    <h4> @Html.DisplayFor(modelItem => item.Tensp)</h4>
                </div>
            </div>
        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</div>


