@model ModelEF.Model.Dangnhap

@{
    ViewBag.Title = "Tạo mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header {
    <i class="fa fa-save"></i>&nbsp; Tạo Mới
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="col-md-6 ">
                @Html.ActionLink("Quay lại", "index", "User", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-lg-12 form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.users, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.users, new { @class = "form-control", @placeHolder="Nhập tên đăng nhập" })
                @Html.ValidationMessageFor(model => model.users, "", new { @class = "text-danger" })
            </div>  
            <div class="form-group">
                @Html.LabelFor(model => model.passwords, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.passwords, new { @class = "form-control", @type = "password", @placeHolder = "Nhập mật khẩu" })
                    @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-danger" />
                </div>
            </div>
            </div>
        </div>

        }
